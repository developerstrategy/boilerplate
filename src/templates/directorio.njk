---
layout: layout/base.njk
permalink: /directorio/
---
<div class="container-2 text-center mt-120">
  <h1 class="h1 mb-16"> Directorio de {{ ejemplohtml.grupo[0].nombre }} </h1>
  <ul class="grid-4 list-clear ttc">
    {% for idx in range(0, ejemplohtml.elementos | length) %}
    {% set icononuevo = ejemplohtml.elementos[idx].tipo %}
    {% set iconoA = ''%}
    {% if icononuevo.slice(0, 7) == 'terraza' %}
    {% set iconoA = '<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 32 32"> <title>terrace</title> <g stroke-linecap="square" stroke-linejoin="miter" stroke-width="1" transform="translate(0.5 0.5)" fill="none" stroke="#212121" stroke-miterlimit="10"> <line x1="8" y1="18" x2="24" y2="18"></line> <line x1="16" y1="29" x2="16" y2="18"></line> <line x1="31" y1="16" x2="31" y2="29"></line> <polyline points="31 23 23 23 23 29"></polyline> <line x1="1" y1="16" x2="1" y2="29"></line> <polyline points="1 23 9 23 9 29"></polyline> <path d="M29.39,8A17.94,17.94,0,0,0,2.611,8Z" stroke="#212121"></path> <line x1="16" y1="8" x2="16" y2="13" stroke-linecap="butt" stroke="#212121"></line> </g> </svg>' %}
    {% else %}
    {% set iconoA = '<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 32 32"> <title>conference-room</title> <g stroke-linecap="square" stroke-linejoin="miter" stroke-width="1" transform="translate(0.5 0.5)" fill="none" stroke="#212121" stroke-miterlimit="10"> <rect x="9" y="4" width="14" height="24" stroke-linecap="butt"></rect> <circle cx="3" cy="7" r="2" stroke-linecap="butt" stroke="#212121"></circle> <circle cx="3" cy="16" r="2" stroke-linecap="butt" stroke="#212121"></circle> <circle cx="3" cy="25" r="2" stroke-linecap="butt" stroke="#212121"></circle> <circle cx="29" cy="7" r="2" stroke-linecap="butt" stroke="#212121"></circle> <circle cx="29" cy="16" r="2" stroke-linecap="butt" stroke="#212121"></circle> <circle cx="29" cy="25" r="2" stroke-linecap="butt" stroke="#212121"></circle> </g> </svg> ' %}
    {% endif %}
    <li class="is-flex flex-column ">
      <a href="/{{ejemplohtml.grupo[0].nombre}}/{{ejemplohtml.elementos[idx].tipo | slugify }}">
        <div>
          {{ iconoA | safe }} <br>
          {{ejemplohtml.elementos[idx].tipo }}
        </div>
      </a>
    </li>
    {% endfor %}
  </ul>
  <ul class="grid-4 list-clear ttc pt-64">
    {% for idx in range(0, restaurantejemplohtml.elementos | length) %}
    {% set icononuevo = restaurantejemplohtml.elementos[idx].tipo %}
    {% set iconoA = ''%}
    <li class="is-flex flex-column {{ claseColor }} ">
      Restaurant/ejemplohtml
      <a href="/{{ejemplohtml.grupo[0].nombre}}/{{ejemplohtml.elementos[idx].tipo | slugify }}">
        <div>
          {{ iconoA | safe }} <br>
          {{restaurantejemplohtml.elementos[idx].tipo }}
        </div>
      </a>
    </li>
    {% endfor %}
  </ul>
</div>